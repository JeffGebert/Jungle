<tr>
  <td>
  <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price %>
  </td>
  <td>
    <p><%= line_item.quantity %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price * line_item.quantity %>
  </td>
</tr>
